{
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "groupName": "Test dependencies",
      "matchManagers": [
        "pep621"
      ],
      "matchDepTypes": [
        "project.optional-dependencies"
      ],
      "matchJsonata": [
        "managerData.depGroup = 'test'"
      ]
    },
    {
      "groupName": "Docs dependencies",
      "matchManagers": [
        "pep621"
      ],
      "matchDepTypes": [
        "project.optional-dependencies"
      ],
      "matchJsonata": [
        "managerData.depGroup = 'docs'"
      ]
    },
    {
      "groupName": "Dev dependencies",
      "matchManagers": [
        "pep621"
      ],
      "matchDepTypes": [
        "dependency-groups"
      ],
      "matchJsonata": [
        "managerData.depGroup = 'dev'"
      ]
    }
  ],
  "separateMajorMinor": false
}
